root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 1
trim_trailing_whitespace = true

[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.vue]
indent_size = 2

[*.feature]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4
